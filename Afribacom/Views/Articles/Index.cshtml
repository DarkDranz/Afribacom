@model IEnumerable<Afribacom.Models.Articles>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.article_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.article_quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.article_price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.category_Id)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.article_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.article_quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.article_price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.category_Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
